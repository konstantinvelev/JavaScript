<main>
    <div class="container">
        <div class="about-us">
            {{#if  isLogged}}
            <div class="shoes">
            {{#each shoes}}
                <div class="shoe">
                    <img src="{{imageUrl}}">
                    <h3>{{brand}}</h3>
                    <a href="/details/{{id}}">Buy it for ${{price}}</a>
                </div>
            {{/each}}
            </div>
            {{else}}
            <div>
                <img src="./shoes.jpg" alt="">
                <img src="./shoes2.jpg" alt="">
            </div>
            <p>
                <a href="/register">Register Now</a> and Try it!
            </p>
            {{/if}}
        </div>
    </div>
</main>